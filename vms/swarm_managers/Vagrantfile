Vagrant.configure("2") do |config|
  
  config.vm.provision "shell", path: "provisioning.sh"

  config.vm.define "manager1" do |config|
    config.vm.box = "ubuntu/trusty64"
    config.vm.network "public_network", ip: "192.168.20.101", bridge: "ens3"
  end

  config.vm.define "manager2" do |config|
    config.vm.box = "ubuntu/trusty64"
    config.vm.network "public_network", ip: "192.168.20.102", bridge: "ens3"
  end

  config.vm.define "manager3" do |config|
    config.vm.box = "ubuntu/trusty64"
    config.vm.network "public_network", ip: "192.168.20.103", bridge: "ens3"
  end

end
